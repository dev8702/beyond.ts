{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "es6",
      "es2016",
      "dom"
    ],
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": [
    "app/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
