{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "types": ["node"],
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": [
    "app/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}